{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@middlewares/*": [
                "./src/middlewares/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@views/*": [
                "./src/views/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}